<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RE360</title>
    <link rel="icon" href="~/images/logore360.png" type="image/x-icon">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/3.0.0/toaster.min.css" rel="stylesheet" />
    <script src="https://code.angularjs.org/1.2.0/angular-animate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/3.0.0/toaster.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="~/js/layout.js"></script>
</head>
<body>
    <div ng-app="MyApp" ng-controller="MyController" ng-init="init()">
        @RenderBody()
       @*  <div ng-show="imgloader" class="preloader">
            <img src="~/images/loadernew.gif" />
        </div> *@
        <toaster-container toaster-options="{'toaster-id': 'notification', 'time-out':{ 'toast-warning': 1000, 'toast-error': 0 }}">
        </toaster-container>
        <toaster-container toaster-options="{'toaster-id': 'page-validation', 'position-class': 'toast-center', 'limit': 5}">
        </toaster-container>
        <script type='text/ng-template' id='validation-error-toast.html'>
            {{totalErrors}} Errors found
            <button class="toast-button" ng-click="more()">More</button>
        </script>
    </div>
</body>
</html>