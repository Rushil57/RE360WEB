@{
    Layout = "~/Views/PartialView/Layout.cshtml";
}

<link rel="stylesheet" href="~/css/StyleRegister.css" asp-append-version="true" />
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
<script src="~/js/Admin.js"></script>

<center>
    <div ng-app="MyApp" class="" ng-controller="MyController" ng-init="init()" width="50%" style="width: 744px; height: 656px; padding-bottom: 41px; background: white; flex-direction: column; justify-content: flex-start; align-items: center; gap: 40px; display: inline-flex">
        <div class="OfficialLogoAdmin">
            <div class="Group" style="width: 117.80px; height: 117.80px; position: relative">
                <img src="~/images/logore360.png" />
            </div>
        </div>
        <div class="TitleLogin">
            <div class="Register">LOGIN</div>
            <br />
            <br />
        </div>
        <div class="AdminForm">
            <form name="regForm" novalidate>
                <div class="FormFields" style="flex-direction: column; justify-content: center; align-items: flex-start; gap: 24px; display: flex">
                    <div class="DefaultFormFields">
                        <input type="text" id="txtUserName" name="UserName" ng-model="UserName" required placeholder="User Name" class="AdminFormFieldsLabel" />
                        <div class="text-danger" ng-show="(regForm.$submitted || regForm.UserName.$touched) && regForm.UserName.$error.required">UserName is required.</div>
                    </div>
                    <div class="DefaultFormFields">
                        <input type="password" id="txtPassword" name="password" required ng-model="Password" placeholder="Password" class="AdminFormFieldsLabel" />
                        <div class="text-danger" ng-show="(regForm.$submitted || regForm.password.$touched) && regForm.password.$error.required">Password is required.</div>
                    </div>
                </div>
                <br />
                <button type="submit" ng-click="LoginAdmin()" class="Adnloginbtn">
                    <div class="PrimaryDefault" style="flex: 1 1 0; text-align: center; color: white; font-size: 18px; font-family: sans-serif; font-weight: 700; line-height: 24px; word-wrap: break-word">
                        Login
                    </div>
                </button>
            </form>
        </div>
        <div ng-show="imgloader" class="preloader">
            <img src="~/images/loadernew.gif" ng-show="imgloader" />
        </div>
        <toaster-container toaster-options="{'toaster-id': 'notification', 'time-out':{ 'toast-warning': 1000, 'toast-error': 0 }}">
        </toaster-container>
        <toaster-container toaster-options="{'toaster-id': 'page-validation', 'position-class': 'toast-center', 'limit': 5}">
        </toaster-container>
        <script type='text/ng-template' id='validation-error-toast.html'>
            {{totalErrors}} Errors found
            <button class="toast-button" ng-click="more()">More</button>
        </script>
    </div>
</center>